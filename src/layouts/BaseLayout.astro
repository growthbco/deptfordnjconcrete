---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_CONFIG } from '../config';
import { CRITICAL_CSS } from '../utils/critical-css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  schema?: any;
  canonical?: string;
}

const { title, description = SITE_CONFIG.description, image, schema, canonical } = Astro.props;
const fullTitle = `${title} | ${SITE_CONFIG.name}`;
const canonicalUrl = canonical || `${SITE_CONFIG.url}${Astro.url.pathname}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <style>
      html { scroll-behavior: smooth; }
      /* Prevent layout shift on mobile */
      body { overflow-x: hidden; }
      /* Optimize tap targets */
      @media (max-width: 768px) {
        a, button { min-height: 44px; min-width: 44px; }
      }
    </style>
    <meta name="google-site-verification" content="gNlWUEJTxmdbWYq8rjpWYcMb4tmvhVl8IJ8kf2R55DM" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Preconnect to external domains for faster loading -->
    <link rel="preconnect" href="https://links.roadsidelaunch.com" />
    <link rel="dns-prefetch" href="https://links.roadsidelaunch.com" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    {image && <meta property="twitter:image" content={image} />}
    
    <title>{fullTitle}</title>
    
    <!-- Critical CSS - Inlined for above-the-fold content -->
    <style set:html={CRITICAL_CSS} />
    
    {schema && (
      <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    )}
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

