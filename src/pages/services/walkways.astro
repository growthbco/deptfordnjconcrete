---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactForm from '../../components/ContactForm.astro';
import RelatedServices from '../../components/RelatedServices.astro';
import ServiceAreasLink from '../../components/ServiceAreasLink.astro';
import { SITE_CONFIG } from '../../config';
import { generateServiceSchema } from '../../utils/schema';

const serviceSchema = generateServiceSchema('walkways', 'Professional concrete walkway and pathway installation in Deptford, NJ. Durable walkways with free estimates.');
---

<BaseLayout 
  title="Concrete Walkway Installation in Deptford, NJ"
  description="Professional concrete walkway contractors serving Deptford, NJ. Residential pathways, commercial sidewalks, and garden walkways. Quality installation and repairs available."
  schema={serviceSchema}
>
  <section class="hero">
    <div class="container">
      <h1>Concrete Walkway Installation in Deptford, New Jersey</h1>
      <p class="hero-subtitle">Professional walkway installation services for residential and commercial properties. Enhance your property with durable concrete pathways.</p>
      <a href="#contact-form" class="cta-primary">Get Free Walkway Estimate</a>
    </div>
  </section>

  <section class="content-section">
    <div class="container">
      <h2>Walkway Services</h2>
      <p>We install beautiful, durable concrete walkways that enhance your property's appearance and functionality.</p>

      <h3>Walkway Installation</h3>
      <ul>
        <li>Residential walkways</li>
        <li>Commercial pathways</li>
        <li>Garden walkways</li>
        <li>Sidewalk installation</li>
        <li>Walkway repairs</li>
      </ul>

      <h3>Related Services</h3>
      <p>Walkways work perfectly with other outdoor concrete features:</p>
      <ul>
        <li><a href="/services/driveways">Driveway Installation</a> - Connect walkways to driveways</li>
        <li><a href="/services/patios">Patio Installation</a> - Pathways to outdoor living spaces</li>
        <li><a href="/services/stamped-concrete">Stamped Concrete</a> - Decorative walkway patterns</li>
      </ul>

      <h3>Areas We Serve</h3>
      <p>We provide walkway installation services throughout <a href="/locations/deptford-nj">Deptford</a>, <a href="/locations/west-deptford-nj">West Deptford</a>, <a href="/locations/woodbury-nj">Woodbury</a>, <a href="/locations/glassboro-nj">Glassboro</a>, and <a href="/locations">all surrounding Gloucester County communities</a>.</p>
    </div>
  </section>

  <RelatedServices currentService="walkways" />
  <ServiceAreasLink serviceName="Walkways" />

  <section id="contact-form" class="contact-section">
    <div class="container">
      <ContactForm 
        title="Get Your Free Walkway Estimate"
        service="walkways"
      />
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: white;
    padding: 3rem 0;
    text-align: center;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    color: #ccc;
    max-width: 800px;
    margin: 0 auto 2rem;
  }
  
  .cta-primary {
    display: inline-block;
    background: #ff6b35;
    color: white;
    padding: 1rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
  }
  
  .content-section {
    padding: 4rem 0;
  }
  
  .content-section h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }
  
  .content-section h3 {
    font-size: 1.5rem;
    color: #ff6b35;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .contact-section {
    padding: 4rem 0;
    background: #f8f9fa;
  }
</style>

