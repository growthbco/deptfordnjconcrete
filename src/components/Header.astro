---
import { SITE_CONFIG } from '../config';
import Logo from './Logo.astro';

// Logo path - add your logo image to public/images/logo.png or update this path
// Set to undefined or empty string to use text logo
const logoPath = undefined; // Change to '/images/logo.png' when you have a logo
---

<header class="header">
  <nav class="nav-container">
    <div class="nav-brand">
      <Logo logo={logoPath} />
    </div>
    <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <ul class="nav-menu">
      <li><a href="/">Home</a></li>
      <li><a href="/services">Services</a></li>
      <li><a href="/locations">Service Areas</a></li>
      <li><a href="/gallery">Gallery</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
    {SITE_CONFIG.phone && (
      <a href={`tel:${SITE_CONFIG.phone}`} class="cta-button">Call Now</a>
    )}
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.querySelector('.mobile-menu-toggle');
    const menu = document.querySelector('.nav-menu');
    const ctaButton = document.querySelector('.cta-button');
    
    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
        toggle.setAttribute('aria-expanded', !isExpanded);
        menu.classList.toggle('active');
        toggle.classList.toggle('active');
        
        // Toggle CTA button visibility on mobile
        if (ctaButton) {
          ctaButton.classList.toggle('mobile-visible');
        }
      });
      
      // Close menu when clicking on a link
      const menuLinks = menu.querySelectorAll('a');
      menuLinks.forEach(link => {
        link.addEventListener('click', () => {
          menu.classList.remove('active');
          toggle.classList.remove('active');
          toggle.setAttribute('aria-expanded', 'false');
          if (ctaButton) {
            ctaButton.classList.remove('mobile-visible');
          }
        });
      });
    }
  });
</script>

<style>
  .header {
    background: #1a1a1a;
    color: white;
    padding: 0.75rem 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }
  
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    position: relative;
  }
  
  .nav-brand {
    flex-shrink: 0;
  }
  
  .logo {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
  }
  
  .logo-link {
    text-decoration: none;
    color: white;
    display: block;
  }
  
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 1001;
  }
  
  .mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background: white;
    transition: all 0.3s;
    border-radius: 2px;
  }
  
  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }
  
  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }
  
  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }
  
  .nav-menu {
    display: flex;
    list-style: none;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
    flex: 1;
    justify-content: center;
  }
  
  .nav-menu a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
    padding: 0.5rem 0;
    display: block;
    font-size: 0.95rem;
  }
  
  .nav-menu a:hover {
    color: #ff6b35;
  }
  
  .cta-button {
    background: #ff6b35;
    color: white;
    padding: 0.625rem 1.25rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.3s;
    white-space: nowrap;
    font-size: 0.95rem;
    flex-shrink: 0;
  }
  
  .cta-button:hover {
    background: #e55a2b;
  }
  
  @media (max-width: 768px) {
    .header {
      padding: 0.5rem 0;
    }
    
    .nav-container {
      padding: 0 1rem;
      gap: 1rem;
    }
    
    .logo {
      font-size: 1.1rem;
    }
    
    .mobile-menu-toggle {
      display: flex;
    }
    
    .nav-menu {
      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      background: #1a1a1a;
      flex-direction: column;
      gap: 0;
      padding: 1rem 0;
      text-align: left;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-out;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .nav-menu.active {
      max-height: 400px;
      padding: 1rem 0;
    }
    
    .nav-menu li {
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    
    .nav-menu a {
      padding: 1rem 1.5rem;
      font-size: 1rem;
    }
    
    .cta-button {
      display: none;
    }
    
    .cta-button.mobile-visible {
      display: block;
      width: calc(100% - 3rem);
      margin: 1rem 1.5rem 0;
      text-align: center;
      padding: 1rem;
      font-size: 1rem;
    }
  }
  
  @media (max-width: 480px) {
    .nav-container {
      padding: 0 0.75rem;
    }
    
    .logo {
      font-size: 1rem;
    }
  }
</style>

