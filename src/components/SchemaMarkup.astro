---
interface Props {
  type: 'LocalBusiness' | 'Service' | 'FAQPage' | 'BreadcrumbList' | 'WebSite';
  data: any;
}

const { type, data } = Astro.props;

const schema = {
  '@context': 'https://schema.org',
  '@type': type,
  ...data
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />

