---
import { SITE_CONFIG } from '../config';
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-section">
      <h3>{SITE_CONFIG.name}</h3>
      <p>{SITE_CONFIG.tagline}</p>
      <p>Serving {SITE_CONFIG.serviceAreas.join(', ')} and surrounding areas.</p>
    </div>
    
    <div class="footer-section">
      <h4>Services</h4>
      <ul>
        <li><a href="/services/pole-barn-foundations">Pole Barn Foundations</a></li>
        <li><a href="/services/concrete-slabs">Concrete Slabs</a></li>
        <li><a href="/services/driveways">Driveways</a></li>
        <li><a href="/services/patios">Patios</a></li>
        <li><a href="/services/walkways">Walkways</a></li>
        <li><a href="/services/retaining-walls">Retaining Walls</a></li>
        <li><a href="/services/basement-flooring">Basement Flooring</a></li>
        <li><a href="/services/stamped-concrete">Stamped Concrete</a></li>
      </ul>
    </div>
    
    <div class="footer-section">
      <h4>Service Areas</h4>
      <ul>
        <li><a href="/locations/deptford-nj">Deptford, NJ</a></li>
        <li><a href="/locations/west-deptford-nj">West Deptford, NJ</a></li>
        <li><a href="/locations/woodbury-nj">Woodbury, NJ</a></li>
        <li><a href="/locations">View All Areas</a></li>
      </ul>
    </div>
    
    <div class="footer-section">
      <h4>Contact</h4>
      <p><a href="/contact">Get Free Estimate</a></p>
      {SITE_CONFIG.phone && <p><a href={`tel:${SITE_CONFIG.phone}`}>{SITE_CONFIG.phone}</a></p>}
      {SITE_CONFIG.email && <p><a href={`mailto:${SITE_CONFIG.email}`}>{SITE_CONFIG.email}</a></p>}
    </div>
  </div>
  
  <div class="footer-bottom">
    <p>&copy; {new Date().getFullYear()} {SITE_CONFIG.name}. All rights reserved.</p>
  </div>
</footer>

<style>
  .footer {
    background: #1a1a1a;
    color: white;
    padding: 2.5rem 0 1rem;
    margin-top: 3rem;
  }
  
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }
  
  .footer-section h3,
  .footer-section h4 {
    margin-top: 0;
    color: #ff6b35;
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }
  
  .footer-section p {
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
    line-height: 1.6;
  }
  
  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-section ul li {
    margin-bottom: 0.5rem;
  }
  
  .footer-section a {
    color: #ccc;
    text-decoration: none;
    transition: color 0.3s;
    font-size: 0.9rem;
    display: inline-block;
    padding: 0.25rem 0;
  }
  
  .footer-section a:hover {
    color: #ff6b35;
  }
  
  .footer-bottom {
    max-width: 1200px;
    margin: 2rem auto 0;
    padding: 1.5rem;
    text-align: center;
    border-top: 1px solid #333;
    color: #999;
    font-size: 0.875rem;
  }
  
  @media (max-width: 768px) {
    .footer {
      padding: 2rem 0 1rem;
      margin-top: 2rem;
    }
    
    .footer-container {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 0 1rem;
    }
    
    .footer-section h3,
    .footer-section h4 {
      font-size: 1rem;
      margin-bottom: 0.75rem;
    }
    
    .footer-section p {
      font-size: 0.875rem;
    }
    
    .footer-section a {
      font-size: 0.875rem;
      padding: 0.375rem 0;
    }
    
    .footer-bottom {
      padding: 1rem;
      font-size: 0.8rem;
      margin-top: 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .footer {
      padding: 1.5rem 0 0.75rem;
    }
    
    .footer-container {
      padding: 0 0.75rem;
      gap: 1.5rem;
    }
    
    .footer-section h3,
    .footer-section h4 {
      font-size: 0.95rem;
    }
    
    .footer-bottom {
      padding: 0.75rem;
      font-size: 0.75rem;
    }
  }
</style>

