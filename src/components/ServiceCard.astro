---
interface Props {
  service: {
    id: string;
    name: string;
    slug: string;
    description: string;
    primary?: boolean;
  };
}

const { service } = Astro.props;
---

<div class={`service-card ${service.primary ? 'primary' : ''}`}>
  <h3>{service.name}</h3>
  <p>{service.description}</p>
  <a href={`/services/${service.slug}`} class="service-link">
    Learn More â†’
  </a>
</div>

<style>
  .service-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: transform 0.3s, box-shadow 0.3s;
  }
  
  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.15);
  }
  
  .service-card.primary {
    border: 2px solid #ff6b35;
    background: linear-gradient(135deg, #fff 0%, #fff5f0 100%);
  }
  
  .service-card h3 {
    margin-top: 0;
    color: #1a1a1a;
    font-size: 1.5rem;
  }
  
  .service-card.primary h3 {
    color: #ff6b35;
  }
  
  .service-card p {
    color: #666;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .service-link {
    color: #ff6b35;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s;
  }
  
  .service-link:hover {
    color: #e55a2b;
  }
</style>

