---
interface Props {
  service?: string;
  location?: string;
  title?: string;
}

const { service = '', location = '', title = 'Get Your Free Estimate' } = Astro.props;
---

<div class="contact-form-container">
  <h2>{title}</h2>
  <div class="form-wrapper">
    <iframe
      src="https://links.roadsidelaunch.com/widget/form/1MX0NL9lyqXyaPJhq945"
      style="width:100%;height:100%;border:none;border-radius:3px"
      id="inline-1MX0NL9lyqXyaPJhq945" 
      data-layout="{'id':'INLINE'}"
      data-trigger-type="alwaysShow"
      data-trigger-value=""
      data-activation-type="alwaysActivated"
      data-activation-value=""
      data-deactivation-type="neverDeactivate"
      data-deactivation-value=""
      data-form-name="Form 2"
      data-height="952"
      data-layout-iframe-id="inline-1MX0NL9lyqXyaPJhq945"
      data-form-id="1MX0NL9lyqXyaPJhq945"
      title="Form 2"
    ></iframe>
  </div>
  <script src="https://links.roadsidelaunch.com/js/form_embed.js"></script>
</div>

<style>
  .contact-form-container {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 8px;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .contact-form-container h2 {
    margin-top: 0;
    color: #1a1a1a;
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .form-wrapper {
    width: 100%;
    min-height: 600px;
    border-radius: 8px;
    overflow: hidden;
    background: white;
  }
  
  .form-wrapper iframe {
    width: 100%;
    min-height: 600px;
    border: none;
    display: block;
  }
</style>

