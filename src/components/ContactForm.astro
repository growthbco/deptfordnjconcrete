---
interface Props {
  service?: string;
  location?: string;
  title?: string;
}

const { service = '', location = '', title = 'Get Your Free Estimate' } = Astro.props;
---

<div class="contact-form-container">
  <h2>{title}</h2>
  <div class="form-wrapper">
    <iframe
      src="https://links.roadsidelaunch.com/widget/form/1MX0NL9lyqXyaPJhq945"
      style="width:100%;height:100%;border:none;border-radius:3px"
      id="inline-1MX0NL9lyqXyaPJhq945" 
      data-layout="{'id':'INLINE'}"
      data-trigger-type="alwaysShow"
      data-trigger-value=""
      data-activation-type="alwaysActivated"
      data-activation-value=""
      data-deactivation-type="neverDeactivate"
      data-deactivation-value=""
      data-form-name="Form 2"
      data-height="952"
      data-layout-iframe-id="inline-1MX0NL9lyqXyaPJhq945"
      data-form-id="1MX0NL9lyqXyaPJhq945"
      title="Contact Form"
      loading="lazy"
      width="100%"
      height="952"
    ></iframe>
  </div>
  <script src="https://links.roadsidelaunch.com/js/form_embed.js" defer></script>
</div>

<style>
  .contact-form-container {
    background: transparent;
    padding: 0;
    border-radius: 0;
    width: 100%;
  }
  
  .contact-form-container h2 {
    margin-top: 0;
    color: #1a1a1a;
    text-align: left;
    margin-bottom: 1.5rem;
    font-size: 1.75rem;
    line-height: 1.3;
    font-weight: 700;
  }
  
  .form-wrapper {
    width: 100%;
    border-radius: 8px;
    overflow: hidden;
    background: white;
    position: relative;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .form-wrapper:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.12);
  }
  
  .form-wrapper iframe {
    width: 100%;
    height: 952px;
    border: none;
    display: block;
    -webkit-overflow-scrolling: touch;
  }

  /* Animation for form submission success */
  .form-wrapper.submitted {
    animation: formSuccess 0.6s ease-out;
  }

  @keyframes formSuccess {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.02);
    }
    100% {
      transform: scale(1);
    }
  }
  
  @media (max-width: 768px) {
    .contact-form-container {
      padding: 0;
    }
    
    .contact-form-container h2 {
      font-size: 1.5rem;
      margin-bottom: 1.25rem;
      text-align: center;
    }
    
    .form-wrapper {
      border-radius: 8px;
    }
    
    .form-wrapper iframe {
      height: 800px;
    }
  }
  
  @media (max-width: 480px) {
    .contact-form-container {
      padding: 0.75rem;
      background: white;
    }
    
    .contact-form-container h2 {
      font-size: 1.25rem;
      margin-bottom: 1rem;
    }
    
    .form-wrapper {
      border-radius: 0;
      margin: 0 -0.75rem;
      width: calc(100% + 1.5rem);
    }
    
    .form-wrapper iframe {
      height: 800px;
    }
  }
</style>

