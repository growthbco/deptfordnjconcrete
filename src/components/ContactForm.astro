---
interface Props {
  service?: string;
  location?: string;
  title?: string;
}

const { service = '', location = '', title = 'Get Your Free Estimate' } = Astro.props;
---

<div class="contact-form-container">
  <h2>{title}</h2>
  <div class="form-wrapper">
    <iframe
      src="https://links.roadsidelaunch.com/widget/form/1MX0NL9lyqXyaPJhq945"
      style="width:100%;height:100%;border:none;border-radius:3px"
      id="inline-1MX0NL9lyqXyaPJhq945" 
      data-layout="{'id':'INLINE'}"
      data-trigger-type="alwaysShow"
      data-trigger-value=""
      data-activation-type="alwaysActivated"
      data-activation-value=""
      data-deactivation-type="neverDeactivate"
      data-deactivation-value=""
      data-form-name="Form 2"
      data-height="952"
      data-layout-iframe-id="inline-1MX0NL9lyqXyaPJhq945"
      data-form-id="1MX0NL9lyqXyaPJhq945"
      title="Contact Form"
      loading="lazy"
      width="100%"
      height="952"
    ></iframe>
  </div>
  <script src="https://links.roadsidelaunch.com/js/form_embed.js" defer></script>
</div>

<style>
  .contact-form-container {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
  }
  
  .contact-form-container h2 {
    margin-top: 0;
    color: #1a1a1a;
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.75rem;
    line-height: 1.3;
  }
  
  .form-wrapper {
    width: 100%;
    min-height: 600px;
    border-radius: 8px;
    overflow: hidden;
    background: white;
    position: relative;
    aspect-ratio: 16 / 9;
  }
  
  .form-wrapper iframe {
    width: 100%;
    height: 100%;
    min-height: 600px;
    border: none;
    display: block;
    -webkit-overflow-scrolling: touch;
    position: absolute;
    top: 0;
    left: 0;
  }
  
  @media (max-width: 768px) {
    .contact-form-container {
      padding: 1rem;
      border-radius: 4px;
    }
    
    .contact-form-container h2 {
      font-size: 1.5rem;
      margin-bottom: 1.25rem;
      padding: 0 0.5rem;
    }
    
    .form-wrapper {
      min-height: 700px;
      border-radius: 4px;
    }
    
    .form-wrapper iframe {
      min-height: 700px;
    }
  }
  
  @media (max-width: 480px) {
    .contact-form-container {
      padding: 0.75rem;
      background: white;
    }
    
    .contact-form-container h2 {
      font-size: 1.25rem;
      margin-bottom: 1rem;
    }
    
    .form-wrapper {
      min-height: 800px;
      border-radius: 0;
      margin: 0 -0.75rem;
      width: calc(100% + 1.5rem);
    }
    
    .form-wrapper iframe {
      min-height: 800px;
    }
  }
</style>

